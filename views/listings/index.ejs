        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-5">
            <%for(let listing of allListings){%>
                <a href="/listings/<%=listing._id%>" class="text-decoration-none">
                <div class="listing-card col-md-4" style="width: 20rem;">
                    <img src="<%=listing.image.url %>" class="card-img-top" alt="Listing Image" style="height: 20rem; object-fit: cover;">
                    <div class="card-body">
                      <b></b><p class="card-text"><%=listing.title%></p></b>
                      <p class="card-text">&#8377;<%=listing.price%> <i class="tax-info">&nbsp;&nbsp;+18% GST</i></p>
                      <p class="card-text"><%=listing.location%></p>
                    </div>  
                  </div>
                </a>
                <%}%>
        </div>


<script>
  let taxSwitch=document.getElementById('flexSwitchCheckDefault');
  taxSwitch.addEventListener('click',(e)=>{
    let taxInfo=document.getElementsByClassName('tax-info');
    for(info of taxInfo){
      if(taxSwitch.checked){
        info.style.display='block';
      }else{
        info.style.display='none';
      }
    }
  });
</script>

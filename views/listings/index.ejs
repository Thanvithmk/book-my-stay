<% layout('layouts/boilerplate.ejs') %>
    <h3>All Listings</h3>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <%for(let listing of allListings){%>
                <a href="/listings/<%=listing._id%>" class="text-decoration-none">
                <div class="card col-md-4" style="width: 20rem;">
                    <img src="<%=listing.image.url %>" class="card-img-top" alt="Listing Image" style="height: 20rem; object-fit: cover;">
                    <div class="card-body">
                      <b></b><p class="card-text"><%=listing.title%></p></b>
                      <p class="card-text">&#8377;<%=listing.price%></p>
                      <p class="card-text"><%=listing.location.city%></p>
                    </div>
                  </div>
                </a>
                <%}%>
        </div>

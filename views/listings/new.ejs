<% layout('layouts/boilerplate.ejs') %>
<div class="row">
    <div class="col-md-6 offset-md-3">
    <h3>Create a new listing</h3>
    <form method="POST" action="/listings">
        <div class="form-group">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" id="title" class="form-control" required><br><br>
        </div>
        <div class="form-group">   
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="description" class="form-control" required></textarea><br><br>
        </div>
        <div class="form-group">    
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" id="price" class="form-control" required><br><br>
        </div>
        <div class="form-group">    
            <label for="image" class="form-label">Image URL</label>
            <input type="text" name="listing[image][url]" id="image"  class="form-control"><br><br>
        </div>
        <div class="form-group">    
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[location][country]" id="country" class="form-control" required><br><br>
        </div>
        <div class="form-group">
            <label for="city" class="form-label">City</label>
            <input type="text" name="listing[location][city]" id="city" class="form-control" required><br><br>
        </div>
        <div class="form-group">    
            <button class="btn btn-primary">Create Listing</button>
        </div>
        </form>
    </div>
    <a href="/listings">Back to all listings</a>

</div>
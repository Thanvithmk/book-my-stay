<% layout('layouts/boilerplate.ejs') %>

<style>
  .filter{
    margin-top: 2rem;
    margin-right: 2rem;
    text-align: center;
    opacity: 0.7;
  }
  .filter:hover{
    opacity: 1;
    cursor:pointer;
  }
  .filter p{
    font-size:0.8rem;
  }
  #filters{
    display: flex;
    flex-wrap:wrap;
    margin-bottom: 1rem;
    align-items: center;
  }
  .tax-info{
    display:none;
  }
  .tax-toggle{
    border:1px solid black;
    border-radius: 1rem;
    height: 2.5rem;
    padding:0.7rem;
    margin-left: 0.5rem;
    display:flex;
    align-items: center;
  }
</style>
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farm stays</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Forest</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-house-circle-check"></i></div>
        <p>Cabins</p>
      </div>
      <div class="tax-toggle">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" role="switch">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>

    </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-5">
            <%for(let listing of allListings){%>
                <a href="/listings/<%=listing._id%>" class="text-decoration-none">
                <div class="listing-card col-md-4" style="width: 20rem;">
                    <img src="<%=listing.image.url %>" class="card-img-top" alt="Listing Image" style="height: 20rem; object-fit: cover;">
                    <div class="card-body">
                      <b></b><p class="card-text"><%=listing.title%></p></b>
                      <p class="card-text">&#8377;<%=listing.price%> <i class="tax-info">&nbsp;&nbsp;+18% GST</i></p>
                      <p class="card-text"><%=listing.location%></p>
                    </div>  
                  </div>
                </a>
                <%}%>
        </div>


<script>
  let taxSwitch=document.getElementById('flexSwitchCheckDefault');
  taxSwitch.addEventListener('click',(e)=>{
    let taxInfo=document.getElementsByClassName('tax-info');
    for(info of taxInfo){
      if(taxSwitch.checked){
        info.style.display='block';
      }else{
        info.style.display='none';
      }
    }
  });
</script>

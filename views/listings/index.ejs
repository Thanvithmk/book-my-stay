<% layout('layouts/boilerplate.ejs') %>

<style>
  .filter{
    margin-top: 2rem;
    margin-right: 2rem;
    text-align: center;
    opacity: 0.7;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
  }
  .filter:hover{
    opacity: 1;
    background-color: #f8f9fa;
    transform: translateY(-2px);
  }
  .filter.active {
    opacity: 1;
    background-color: #007bff;
    color: white;
  }
  .filter.active:hover {
    background-color: #0056b3;
  }
  .filter p{
    font-size:0.8rem;
    margin: 0;
  }
  #filters{
    display: flex;
    flex-wrap:wrap;
    margin-bottom: 1rem;
    align-items: center;
  }
  .tax-info{
    display:none;
  }
  .tax-toggle{
    border:1px solid black;
    border-radius: 1rem;
    height: 2.5rem;
    padding:0.7rem;
    margin-left: 0.5rem;
    display:flex;
    align-items: center;
  }
  .filter-form {
    margin: 0;
  }
  .filter-form button {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    width: 100%;
  }
  .filter-results {
    margin: 1rem 0;
    padding: 0.5rem 1rem;
    background-color: #e9ecef;
    border-radius: 0.5rem;
    font-weight: bold;
  }
</style>

<% if(selectedCategory) { %>
  <div class="filter-results">
    Showing results for: <span style="color: #007bff;"><%= selectedCategory %></span>
    <a href="/listings" class="btn btn-sm btn-outline-secondary ms-3">Show All</a>
  </div>
<% } %>

<div id="filters">
